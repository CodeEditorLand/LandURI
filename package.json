{
	"description": "The URI implementation that is used by VS Code and its extensions",
	"devDependencies": {
		"@types/mocha": "^10.0.2",
		"@types/node": "16.x",
		"mocha": "^10.2.0",
		"path-browserify": "^1.0.1",
		"rimraf": "^5.0.5",
		"ts-loader": "^9.4.4",
		"typescript": "^5.2.2",
		"typescript-esbuild": "0.4.5",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4"
	},
	"exports": {
